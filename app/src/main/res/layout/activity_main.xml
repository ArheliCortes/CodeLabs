<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/customViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dial_view_margin_24"
        android:padding="@dimen/dial_view_padding_16"
        android:text="Fan Controller"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display3"
        android:textColor="@color/black"
        android:textSize="@dimen/dial_view_text_size_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.arhelicortes.fancontroller.DialView
        android:id="@+id/dialView"
        android:layout_width="@dimen/dial_view_size_200"
        android:layout_height="@dimen/dial_view_size_200"
        android:layout_marginLeft="@dimen/dial_view_margin_8"
        android:layout_marginTop="@dimen/dial_view_margin_8"
        android:layout_marginRight="@dimen/dial_view_margin_8"
        app:fanColor1="@color/fan_01"
        app:fanColor2="@color/fan_02"
        app:fanColor3="@color/fan_03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customViewLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>